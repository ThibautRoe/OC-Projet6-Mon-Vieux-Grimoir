{
    "openapi": "3.1.0",
    "info": {
        "title": "API Mon Vieux Grimoire",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "https://oc-7-mon-vieux-grimoire-back-end.vercel.app"
        },
        {
            "url": "http://localhost:4000"
        }
    ],
    "tags": [
        {
            "name": "user",
            "description": "User operations"
        },
        {
            "name": "book",
            "description": "Books operations"
        }
    ],
    "paths": {
        "/api/auth/signup": {
            "post": {
                "tags": ["user"],
                "summary": "User Signup",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/User_request_schema"
                            },
                            "examples": {
                                "default": { "$ref": "#/components/schemas/User_request_example" }
                            }
                        }
                    },
                    "required": true
                },
                "responses": {
                    "201": {
                        "description": "Signup successful",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/User_response_signup_schema"
                                },
                                "examples": {
                                    "default": { "$ref": "#/components/schemas/User_response_signup_example" }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/auth/login": {
            "post": {
                "tags": ["user"],
                "summary": "User Login",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/User_request_schema"
                            },
                            "examples": {
                                "default": { "$ref": "#/components/schemas/User_request_example" }
                            }
                        }
                    },
                    "required": true
                },
                "responses": {
                    "200": {
                        "description": "Login successful",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/User_response_login_schema"
                                },
                                "examples": {
                                    "default": { "$ref": "#/components/schemas/User_response_login_example" }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/books": {
            "get": {
                "tags": ["book"],
                "summary": "Get All Books",
                "responses": {
                    "200": {
                        "description": "List of all books",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Book_response_schema"
                                    }
                                },
                                "examples": {
                                    "default": { "$ref": "#/components/schemas/Book_response_example" }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": ["book"],
                "summary": "Create Book",
                "security": [{ "bearerAuth": [] }],
                "requestBody": {
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "$ref": "#/components/schemas/Book_creation_request_schema"
                            }
                        }
                    },
                    "required": true
                },
                "responses": {
                    "201": {
                        "description": "Book created successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Book_creation_response_schema"
                                },
                                "examples": {
                                    "default": { "$ref": "#/components/schemas/Book_creation_response_example" }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/books/{id}": {
            "get": {
                "tags": ["book"],
                "summary": "Get Single Book",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Single book details",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Book_response_schema"
                                },
                                "examples": {
                                    "default": { "$ref": "#/components/schemas/Book_response_example" }
                                }
                            }
                        }
                    }
                }
            },
            "put": {
                "tags": ["book"],
                "summary": "Update Book",
                "security": [{ "bearerAuth": [] }],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "requestBody": {
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "$ref": "#/components/schemas/Book_creation_request_schema"
                            }
                        },
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Book_modification_JSON_request_schema"
                            },
                            "examples": {
                                "default": { "$ref": "#/components/schemas/Book_modification_JSON_request_example" }
                            }
                        }
                    },
                    "required": true
                },
                "responses": {
                    "200": {
                        "description": "Book modified successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Book_modification_JSON_response_schema"
                                },
                                "examples": {
                                    "default": { "$ref": "#/components/schemas/Book_modification_JSON_response_example" }
                                }
                            }
                        }
                    }
                }
            },
            "delete": {
                "tags": ["book"],
                "summary": "Delete Book",
                "security": [{ "bearerAuth": [] }],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Book deleted successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Book_deletion_response_schema"
                                },
                                "examples": {
                                    "default": { "$ref": "#/components/schemas/Book_deletion_response_example" }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/books/bestrating": {
            "get": {
                "tags": ["book"],
                "summary": "Get Best Rating Books",
                "responses": {
                    "200": {
                        "description": "List of books with best ratings",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Book_response_schema"
                                    }
                                },
                                "examples": {
                                    "default": { "$ref": "#/components/schemas/Book_response_example" }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/books/{id}/rating": {
            "post": {
                "tags": ["book"],
                "summary": "Set Book Rating",
                "security": [{ "bearerAuth": [] }],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Book_set_rating_request_schema"
                            },
                            "examples": {
                                "default": { "$ref": "#/components/schemas/Book_set_rating_request_example" }
                            }
                        }
                    },
                    "required": true
                },
                "responses": {
                    "200": {
                        "description": "Book rating set successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Book_response_schema"
                                },
                                "examples": {
                                    "default": { "$ref": "#/components/schemas/Book_response_example" }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "User_request_schema": {
                "type": "object",
                "properties": {
                    "email": {
                        "type": "string"
                    },
                    "password": {
                        "type": "string"
                    }
                }
            },
            "User_request_example": {
                "summary": "Example of User Request",
                "value": {
                    "email": "email@domain.com",
                    "password": "MyStrongPassword1!"
                }
            },
            "User_response_signup_schema": {
                "type": "object",
                "properties": {
                    "message": {
                        "type": "string"
                    }
                }
            },
            "User_response_signup_example": {
                "summary": "Example of User Signup Response",
                "value": {
                    "message": "User created successfully"
                }
            },
            "User_response_login_schema": {
                "type": "object",
                "properties": {
                    "userId": {
                        "type": "string"
                    },
                    "token": {
                        "type": "string"
                    }
                }
            },
            "User_response_login_example": {
                "summary": "Example of User Login Response",
                "value": {
                    "userId": "654321",
                    "token": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9"
                }
            },
            "Book_response_schema": {
                "type": "object",
                "properties": {
                    "_id": {
                        "type": "string"
                    },
                    "userId": {
                        "type": "string"
                    },
                    "title": {
                        "type": "string"
                    },
                    "author": {
                        "type": "string"
                    },
                    "imageUrl": {
                        "type": "string"
                    },
                    "year": {
                        "type": "number"
                    },
                    "genre": {
                        "type": "string"
                    },
                    "ratings": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "userId": {
                                    "type": "string"
                                },
                                "grade": {
                                    "type": "number",
                                    "minimum": 0,
                                    "maximum": 5
                                },
                                "_id": {
                                    "type": "string"
                                }
                            }
                        }
                    },
                    "averageRating": {
                        "type": "number",
                        "minimum": 0,
                        "maximum": 5
                    }
                }
            },
            "Book_response_example": {
                "summary": "Example of Book Response",
                "value": {
                    "_id": "654321",
                    "userId": "654321",
                    "title": "Book title",
                    "author": "Book author",
                    "imageUrl": "https://url.com/image.png",
                    "year": 1999,
                    "genre": "Book genre",
                    "ratings": [
                        {
                            "userId": "654321",
                            "grade": 5,
                            "_id": "654321"
                        },
                        {
                            "userId": "75432",
                            "grade": 4,
                            "_id": "75432"
                        }
                    ],
                    "averageRating": 4.5
                }
            },
            "Book_creation_request_schema": {
                "type": "object",
                "properties": {
                    "book": {
                        "type": "string"
                    },
                    "image": {
                        "type": "string",
                        "format": "binary"
                    }
                }
            },
            "Book_creation_response_schema": {
                "type": "object",
                "properties": {
                    "message": {
                        "type": "string"
                    }
                }
            },
            "Book_creation_response_example": {
                "summary": "Example of Book Creation Response",
                "value": {
                    "message": "Book created successfully"
                }
            },
            "Book_modification_JSON_request_schema": {
                "type": "object",
                "properties": {
                    "userId": {
                        "type": "string"
                    },
                    "title": {
                        "type": "string"
                    },
                    "author": {
                        "type": "string"
                    },
                    "year": {
                        "type": "number"
                    },
                    "genre": {
                        "type": "string"
                    }
                }
            },
            "Book_modification_JSON_request_example": {
                "summary": "Example of Book Modification Request",
                "value": {
                    "userId": "654321",
                    "title": "New book title",
                    "author": "New book author",
                    "year": 2000,
                    "genre": "New book genre"
                }
            },
            "Book_modification_JSON_response_schema": {
                "type": "object",
                "properties": {
                    "message": {
                        "type": "string"
                    }
                }
            },
            "Book_modification_JSON_response_example": {
                "summary": "Example of Book Modification Response",
                "value": {
                    "message": "Book modified successfully"
                }
            },
            "Book_deletion_response_schema": {
                "type": "object",
                "properties": {
                    "message": {
                        "type": "string"
                    }
                }
            },
            "Book_deletion_response_example": {
                "summary": "Example of Book Deletion Response",
                "value": {
                    "message": "Book deleted successfully"
                }
            },
            "Book_set_rating_request_schema": {
                "type": "object",
                "properties": {
                    "userId": {
                        "type": "string"
                    },
                    "rating": {
                        "type": "number",
                        "minimum": 0,
                        "maximum": 5
                    }
                }
            },
            "Book_set_rating_request_example": {
                "summary": "Example of Book Rating Request",
                "value": {
                    "userId": "654321",
                    "rating": 5
                }
            }
        },
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer"
            }
        }
    }
}
